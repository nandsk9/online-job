<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="240dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_active_job"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        android:padding="10dp"
        android:layout_margin="15dp"
        card_view:cardElevation="5dp"
        card_view:cardMaxElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_layout_show_active_job"
            android:orientation="horizontal">
           <ImageView
               android:id="@+id/provider_rv_active_job_img"
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:src="@drawable/punjbi" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/provider_rv_active_job_tv_job_name"
                    android:text="Job Name : Painting"
                    android:padding="8dp"
                    android:fontFamily="@font/proximanovaregular"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/provider_rv_active_job_tv_job_location"
                    android:text="Job Location : Location"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/provider_rv_active_job_tv_job_date"
                    android:text="Job date : 08-08-8888"
                    android:padding="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/provider_rv_active_job_tv_job_category"
                    android:text="Job Category : Category"
                    android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>