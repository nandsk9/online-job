<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".provider.FragmentProviderPost">
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="12dp"

                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Categoory"
                    android:textStyle="bold"


                    />
                <Spinner
                    android:id="@+id/provider_spinner_type"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="Sub Catagories"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/provider_spinner_catagories"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <EditText
                    android:id="@+id/provider_post_job_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:hint="Job Name"
                    android:drawableLeft="@drawable/ic_person"/>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/provider_post_job_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:hint="Enter the Location"
                    android:drawableLeft="@drawable/ic_location_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/provider_post_job_mob_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:digits="0123456789+"
                    android:maxLength="13"
                    android:text="+91"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:hint="Enter contact number"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/provider_post_job_wage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:hint="Enter the Wage(Assumed)"
                    android:drawableLeft="@drawable/ic_business_center_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:text="Qualification"
                    android:gravity="center"
                    android:textStyle="bold"
                    />
                <Spinner
                    android:id="@+id/provider_spinner_qualification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/provider_post_job_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:ems="10"
                    android:inputType="date"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="Work Date"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/provider_post_job_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:inputType="time"
                    android:focusable="false"
                    android:gravity="center"
                    android:hint="Work Time"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/provider_post_job_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textview"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="50dp"
                android:id="@+id/provider_post_job_btn_choose_img"
                android:layout_below="@+id/provider_post_job_image"
                android:background="@drawable/edit"
                android:layout_marginTop="10dp"
                android:text="Choose Image of Work"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_provider_post_job"
                android:layout_below="@+id/ImageNameEditText"
                android:textColor="#ffffff"
                android:background="@drawable/button"
                android:layout_marginTop="20dp"
                android:text="Post "/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>