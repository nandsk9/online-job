<?xml version="1.0" encoding="UTF-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        card_view:cardMaxElevation="8dp"
        android:layout_margin="10dp"

        >
    <LinearLayout
        android:id="@+id/image_dialog_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/service_emloyer_dialog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentLeft="true"
            android:src = "@drawable/intro_provide"/>
        <ImageView
            android:id="@+id/service_worker_dialog"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            android:src = "@drawable/intro_seek"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">

        <Button
            android:id="@+id/dialog_btn_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:text="provider"
            android:layout_margin="10dp"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#fff"
            android:background="@drawable/button"
            />

        <Button
            android:id="@+id/dialog_btn_worker"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="@drawable/button"
            android:text="worker"
            android:textColor="#fff" />

    </RelativeLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>